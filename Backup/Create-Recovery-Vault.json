{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.2",
    "parameters": {
        "location": {
            "type": "string",
            "allowedValues": [
                "canadaeast",
                "canadacentral",
                "japaneast",
                "japanwest",
                "eastasia",
                "southeastasia",
                "eastus",
                "eastus2",
                "centralus",
                "westus"
            ],
            "metadata": {
                "description": "Azure region to deploy resource"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": [
                "prod",
                "stage",
                "deve",
                "test"
            ],
            "metadata": {
                "description": "Environment type"
            }
        }
    },
    "variables": {
        "recoveryVaultName": "[concat('VAULT-', toUpper(parameters('location')), '-', toUpper(parameters('environment')), '-1')]",
        "recoveryVaultId": "[resourceId('Microsoft.RecoveryServices/vaults/', variables('recoveryVaultName'))]"
    },
    "resources": [
        {
            "name": "[variables('recoveryVaultName')]",
            "type": "Microsoft.RecoveryServices/vaults",
            "apiVersion": "2016-06-01",
            "location": "[parameters('location')]",
            "sku": {
                "name": "RS0",
                "tier": "Standard"
            },
            "properties": { }
        }
    ],
    "outputs": {
        "recoveryVaultId": {
            "type": "string",
            "value": "[variables('recoveryVaultId')]"
        }
    }
}