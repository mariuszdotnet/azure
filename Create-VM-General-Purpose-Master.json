{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.1.6",
    "parameters": {
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "Specify VM name"
            }
        },
        "attachDomain": {
            "type": "string",
            "defaultValue": "standalone",
            "allowedValues": [
                "mfcgd.com",
                "standalone"
            ],
            "metadata": {
                "description": "Should VM be attached to domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for azadmin"
            }
        },
        "vmSize": {
            "type": "string",
            "allowedValues": [
                "vCPU:2 MemGB:8  TempStorage:16",
                "vCPU:4 MemGB:16 TempStorage:32",
                "vCPU:8 MemGB:32 TempStorage:64"
            ],
            "metadata": {
                "description": "Select VM size"
            }
        },
        "recoveryVault": {
            "type": "string",
            "allowedValues": [
                "Backup required",
                "Backup not required"
            ],
            "metadata": {
                "description": "Is backup required?"
            }
        },
        "storageType": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "Select storage type"
            }
        },
        "virtualNetwork": {
            "type": "string",
            "metadata": {
                "description": "Select vNet"
            }
        },
        "subnet": {
            "type": "string",
            "metadata": {
                "description": "select subnet"
            }
        },
        "publicIP": {
            "type": "string",
            "allowedValues": [
                "none",
                "Basic",
                "Standard"
            ],
            "metadata": {
                "description": "Is public IP required?"
            }
        },
        "costCenter": {
            "type": "string",
            "metadata": {
                "description": "Provide cost center"
            }
        }
    },
    "variables": {
        "defaultAdmin": "azadmin",
        "vmSizeKey": {
            "vCPU:2 MemGB:8  TempStorage:16": "Standard_D2s_v3",
            "vCPU:4 MemGB:16 TempStorage:32": "Standard_D4s_v3",
            "vCPU:8 MemGB:32 TempStorage:64": "Standard_D8s_v3"
        },
        "storageTypeKey": {
            "Standard": "Standard_LRS",
            "Premium": "Premium_LRS"
        },
        "publicIPAddressName": "[concat('PIP-', parameters('vmName'), '-', parameters('publicIP'))]",
        "vNICName": "[concat('NIC-', parameters('vmName'), '-1')]",
        "vNetID": "[resourceId('Microsoft.Network/virtualNetworks/', parameters('virtualNetwork')]",
        "subnetID": "[concat(variables('vnetID'),'/subnets/', parameters('subnet')]"
    },
    "resources": [
        {
            "condition": "[not(equals(parameters('publicIP'), 'none'))]",
            "name": "Create-PublicIP",
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Network/Create-PublicIP-Template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "publicIPSku": {
                        "value": "[parameters('publicIP')]"
                    },
                    "publicIPAddressName": {
                        "value": "[variables('publicIPAddressName')]"
                    }
                }
            }
        },
        {
            "name": "[variables(vNICName)]",
            "apiVersion": "2017-06-01",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[if(not(equals(parameters('publicIP'), 'none'))), resourceId('Microsoft.Network/publicIPAddresses', 'publicIPAddressName'),json('null')]",
                "[variables('vNetID')]",
                "[variables('subnetID')]"
            ],
            "properties": {
                "ipConfigurations":[
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetID')]"
                            }

                        }
                    }
                ]
            }
        }
    ],
    "outputs": { }
}