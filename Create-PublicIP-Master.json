{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.1.1",
    "parameters": {
        "publicIP": {
            "type": "string",
            "allowedValues": [
                "Basic",
                "Standard"
            ],
            "defaultValue": "Basic",
            "metadata": {
                "description": "Select Public IP SKU"
            }
        },
        "publicIPAddressName": {
            "type": "string",
            "metadata": {
                "description": "Public IP Address Name"
            }
        }
    },
    "variables": {
        "defaultAllocationMethod": "Static"
    },
    "resources": [
        {
            "name": "Create-PublicIP",
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Network/Create-PublicIP-Template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "publicIPSku": {
                        "value": "[parameters('publicIP')]"
                    },
                    "publicIPAddressName": {
                        "value": "[concat('PIP-', parameters('publicIPAddressName'), '-', parameters('publicIP'))]"
                    }

                }
            }
        }
    ],
    "outputs": { }
}