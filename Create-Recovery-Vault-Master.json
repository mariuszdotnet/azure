{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.2",
    "parameters": {
        "location": {
            "type": "string",
            "allowedValues": [
                "canadaeast",
                "canadacentral",
                "japaneast",
                "japanwest",
                "eastasia",
                "southeastasia",
                "eastus",
                "eastus2",
                "centralus",
                "westus"
            ],
            "metadata": {
                "description": "Azure region to deploy resource"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": [
                "prod",
                "stage",
                "deve",
                "test"
            ],
            "metadata": {
                "description": "Environment type"
            }
        }
    },
    "variables": {
        "recoveryVaultRG": "[concat('RECOVERY-VAULTS-', toUpper(parameters('location')))]"
    },
    "resources": [
        {
            "name": "[concat('VAULT-', toUpper(parameters('location')), '-', toUpper(parameters('environment')), '-1')]",
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Backup/Create-Recovery-Vault.json')]",
                    "contentVersion": "1.0.0.2"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "environment": {
                        "value": "[parameters('environment')]"
                    }

                }
            }
        }
    ],
    "outputs": { }
}