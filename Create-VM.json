{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "Specify VM name"
            }
        },
        "attachDomain": {
            "type": "string",
            "allowedValues": [
                "mfcgd.com",
                "standalone"
            ],
            "defaultValue": "standalone",
            "metadata": {
                "description": "Should VM be attached to domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for azadmin"
            }
        },
        "vmPurpose": {
            "type": "string",
            "allowedValues": [
                "General purpose",
                "Compute optimized",
                "Memory optimized",
                "High performance compute"
            ]
        },
        "vmSize": {
            "type": "string",
            "metadata": {
                "description": "Select desired size"
            }
        }
    },
    "variables": {
        "defaultAdmin": "azadmin",
        "vmPurposeKey": [
            {
                "name": "General purpose",
                "type": "general-purpose"
            },
            {
                "name": "Compute optimized",
                "type": "compute-optimized"
            },
            {
                "name": "Memory optimized",
                "type": "memory-optimized"
            },
            {
                "name": "High performance compute",
                "type": "high-performance-compute"
            }
        ]
    },
    "resources": [],
    "outputs": {
        "vmPurposekey": {
            "type": "array",
            "value": "[array(variables('vmPurposeKey'))]"
        }
    }
}