{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.7",
    "parameters": {
        "version": {
            "type": "string",
            "defaultValue": "1.0.0.7",
            "allowedValues": [
                "1.0.0.7"
            ]
        },
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "Specify VM name"
            }
        },
        "attachDomain": {
            "type": "string",
            "defaultValue": "standalone",
            "allowedValues": [
                "mfcgd.com",
                "standalone"
            ],
            "metadata": {
                "description": "Should VM be attached to domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for azadmin"
            }
        },
        "vmSize": {
            "type": "string",
            "allowedValues": [
                "vCPU:2 MemGB:8  TempStorage:16",
                "vCPU:4 MemGB:16 TempStorage:32",
                "vCPU:8 MemGB:32 TempStorage:64"
            ],
            "metadata": {
                "description": "Select VM size"
            }
        },
        "recoveryVault": {
            "type": "bool",
            "metadata": {
                "description": "Is backup required?"
            }
        },
        "storageType": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "Select storage type"
            }
        },
        "virtualNetwork": {
            "type": "string",
            "metadata": {
                "description": "Select vNet"
            }
        },
        "subnet": {
            "type": "string",
            "metadata": {
                "description": "select subnet"
            }
        },
        "publicIP": {
            "type": "string",
            "allowedValues": [
                "none",
                "Basic",
                "Standard"
            ],
            "metadata": {
                "description": "Is public IP required?"
            }
        },
        "costCenter": {
            "type": "string",
            "metadata": {
                "description": "Provide cost center"
            }
        }
    },
    "variables": {
        "defaultAdmin": "azadmin",
        "vmSizeKey": {
            "vCPU:2 MemGB:8  TempStorage:16": "Standard_D2s_v3",
            "vCPU:4 MemGB:16 TempStorage:32": "Standard_D4s_v3",
            "vCPU:8 MemGB:32 TempStorage:64": "Standard_D8s_v3"
        },
        "storageTypeKey": {
            "Standard": "Standard_LRS",
            "Premium": "Premium_LRS"
        }
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "vmPurpose-general-purpose",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'Compute/vmPurpose-general-purpose.json')]",
                    "contentVersion": "1.0.0.2"
                }
            }
        }
    ],
    "outputs": {
        "XXX": {
            "type": "string",
            "value": "[reference('linkedTemplate').outputs.greetingMessage.value]"
        }
    }
}