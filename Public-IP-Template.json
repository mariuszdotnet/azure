{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "useast2",
        "metadata": {
          "description": "Public IP Deployment Location"
        }
      },
      "publicIPAddressName": {
        "type": "string",
        "defaultValue": "publicIPAddress",
        "metadata": {
          "description": "Public IP Address Name"
        }
      },
      "tag": {
        "type": "object",
        "defaultValue": {
          "key1": "key",
          "value1": "value"
        },
        "metadata": {
          "description": "Tag Values"
        }
      },
      "publicIPdnsPrefix": {
        "type": "string",
        "defaultValue": "publicdnsprefix",
        "metadata": {
          "description": "Public IP DNS Prefix"
        }
      }
    },
    "variables": {
        "networkIPVersion": "2017-03-01"
    },
    "resources": [
      {
        "comments": "Public IP Address Resource",
        "apiVersion": "[variables('networkIPVersion')]",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[parameters('publicIPAddressName')]",
        "location": "[parameters('location')]",
        "tags": {
          "[parameters('tag').key1]": "[parameters('tag').value1]",
        },
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "[parameters('publicIPdnsPrefix')]"
          }
        }
      }
    ]
  }